                <Button x:Name="btnSecenekli" Text="Seçenekli" Clicked="btnSecenekli_Clicked"  BackgroundColor="Orange" FontSize="20"/>
                <Button x:Name="btnSureli" Text="Süreli Seçenekli" Clicked="btnSureli_Clicked"  BackgroundColor="Orange" FontSize="20"/>
               

            </StackLayout>

        </StackLayout>
    </ContentPage.Content>
