        <StackLayout HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" Orientation="Vertical" BackgroundColor="#009AFF">

            <StackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="FillAndExpand">


